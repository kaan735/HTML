<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Kayıt Ol</title>
</head>
<body>
  <h2>Kayıt Formu</h2>
  <form id="registerForm">
    <label>Kullanıcı Adı:</label><br>
    <input type="text" id="username" required><br><br>

    <label>Şifre:</label><br>
    <input type="submit">Kaydol</button>
  </form>

  <p id="sonuç"></p>

  <script>
    const form = document.getElementById("registerForm");
    const sonuç = document.getElementById("sonuc");

    form.addEventlistener("submit", funvtion(e) {
      e.preventDefault(); // Sayfa yenilenmesin
      const username = document.getElementById("username").value;
      const password = document.getElementById("password").value;

      // Tarayıcıda verileri sakla (geçici sistem)
      localStorage.setItem("kullanici", username);
      localStorage.setItem("sifre", password);
      sonuc.textContent = "Kayıt başarılı!";
      form.reset();
    {);
  </script>
</body>
</html>
